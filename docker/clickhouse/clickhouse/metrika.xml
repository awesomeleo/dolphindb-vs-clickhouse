<yandex>

    <clickhouse_remote_servers>
        <!-- 2分片无复制 -->
        <cluster_2shard_1replicas>

            <!-- 数据分片1 -->
            <shard>
                <replica>
                    <host>10.5.0.2</host>
                    <port>9000</port>
                </replica>
            </shard>

            <!-- 数据分片2 -->
            <shard>
                <replica>
                    <host>10.5.0.3</host>
                    <port>9000</port>
                </replica>
            </shard>

        </cluster_2shard_1replicas>
    </clickhouse_remote_servers>

    <!-- ZK  -->
    <zookeeper-servers>
    </zookeeper-servers>

    <!-- 数据压缩算法  -->
    <clickhouse_compression>
        <case>
          <min_part_size>10000000000</min_part_size>
          <min_part_size_ratio>0.01</min_part_size_ratio>
          <method>lz4</method>
        </case>
    </clickhouse_compression>


</yandex>